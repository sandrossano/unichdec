<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_persone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8e5f0"
    tools:layout_editor_absoluteY="65dp">

    <LinearLayout
        android:id="@+id/carica"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/titolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="Titolo:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <SearchView
                android:id="@+id/cerca_docu"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/titolo"
                android:iconifiedByDefault="false"
                android:searchIcon="@android:drawable/ic_search_category_default">

            </SearchView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="Corso di Laurea:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="25dp"
                android:layout_toEndOf="@+id/textView8"
                android:background="@android:drawable/btn_dropdown"
                android:dropDownWidth="175dp"
                android:popupBackground="?attr/colorButtonNormal"
                android:spinnerMode="dialog" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="Corso di Studio:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="25dp"
                android:layout_toEndOf="@+id/textView8"
                android:background="@android:drawable/btn_dropdown"
                android:dropDownWidth="175dp"
                android:popupBackground="?attr/colorButtonNormal"
                android:spinnerMode="dialog" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBarDocu"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="80dp"
            android:layout_weight="1"
            android:visibility="visible" />

        <ListView
            android:id="@+id/listview_docu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="10dp"
            android:background="#d8e5f0"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:visibility="invisible"
            tools:layout_editor_absoluteY="48dp" />

    </LinearLayout>

</LinearLayout>
