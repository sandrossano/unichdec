<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8e5f0"
        tools:context="com.example.sandro.dec_dipartimentoeconomia.MainActivity">

        <TextView
            android:id="@+id/avviso1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avviso"
            android:layout_centerHorizontal="true"
            android:onClick="apriAvviso"
            android:text="Qua ci saranno gli avvisi"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.132"
            android:layout_marginTop="17dp" />

        <TextView
            android:id="@+id/avviso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avviso"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.561" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_below="@+id/avviso1"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="99dp" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:max="100"
        android:progress="0"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/viewPager"
        android:layout_alignStart="@+id/viewPager"
        android:layout_below="@+id/viewPager"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp" />

    <WebView
        android:id="@+id/browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />


</RelativeLayout>

