<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8e5f0"
        tools:context="com.example.sandro.dec_dipartimentoeconomia.MainActivity">

        <TextView
        android:id="@+id/avviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avviso"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/avviso"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="99dp" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/pager"
        android:layout_centerHorizontal="true">

    </me.relex.circleindicator.CircleIndicator>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indicator"
        android:layout_margin="5dp"
        android:background="@color/cardview_light_background"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <!-- your layout stuff here -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/avvisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="AVVISI"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/nome_lista2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avvisi"
                android:background="@drawable/ovale"
                android:text="13 febbraio"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/testodesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/nome_lista2"
                android:layout_alignBottom="@+id/nome_lista2"
                android:layout_toEndOf="@+id/nome_lista2"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="TESTO AVVISO"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/nome_lista7"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nome_lista2"
                android:background="@drawable/ovale"
                android:text="13 settembre"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/testodesc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/nome_lista7"
                android:layout_alignBottom="@+id/nome_lista7"
                android:layout_toEndOf="@+id/nome_lista7"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:text="TESTO AVVISO"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="italic" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    </RelativeLayout>

